{
    "description": "Validation for new sign up",
    "properties": {
      "firstName": {
        "type": "string",
        "minLength": 1,
        "maxLength": 20,
        "pattern": "\\S+"
      },
      "lastName": {
        "type": "string",
         "minLength": 1,
        "maxLength": 20,
        "pattern": "\\S+"
      },
      "email": {
        "type": "string",
        "format": "email",
         "minLength": 1,
        "maxLength": 45,
        "pattern": "\\S+"
      },
      "password": {
        "type": "string",
         "minLength": 6,
        "maxLength": 12,
        "pattern": "\\S+"
      },
      "validatePassword": {
        "type": "string",
         "minLength": 6,
        "maxLength": 12,
        "pattern": "\\S+"
      }
    },
    "additionalProperties":false,
    "required": [
      "firstName",
      "lastName",
      "email",
      "password",
      "validatePassword"
    ]
  }