{
    "description": "Validation for new dog",
    "properties" : {
        "name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 20,
            "pattern": "\\S+"
        },
        "age": {
            "type": "number",
            "minimum": 1,
            "maxLength": 2,
            "pattern": "\\S+"
        },
        "genre": {
            "type": "string",
            "enum": ["Male", "Female"],
            "pattern": "\\S+"
        },
        "description": {
            "type": "string",
            "minLength": 1,
            "maxLength": 150,
            "pattern": "\\S+"
        },
        "imgUrl": {
            "type": "string",
            "minLength": 1,
            "maxLength": 260,
            "pattern": "\\S+"
        }
    },
    "additionalProperties": false,
    "required": [
        "name",
        "age",
        "genre",
        "description",
        "imgUrl"
    ]
}